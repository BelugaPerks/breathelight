<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.belugaperks.breathelight_sleepassist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bulb_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bulb_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.belugaperks.breathelight_sleepassist.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.belugaperks.breathelight_sleepassist.ui.light.LightPulse"
                  android:label="Light Pulse Activity"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        </activity>

    </application>

</manifest>